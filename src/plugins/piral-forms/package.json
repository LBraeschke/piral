{
  "name": "piral-forms",
  "version": "1.4.0",
  "description": "Plugin for providing advanced form support in Piral.",
  "keywords": [
    "piral",
    "pilet-api",
    "smapiot",
    "portal",
    "modules",
    "api",
    "plugin",
    "plugin-component",
    "forms"
  ],
  "author": "smapiot",
  "homepage": "https://piral.io",
  "license": "MIT",
  "module": "esm/index.js",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./lib/index.js"
    },
    "./esm/*": {
      "import": "./esm/*"
    },
    "./lib/*": {
      "require": "./lib/*"
    },
    "./_/*": {
      "import": "./esm/*.js",
      "require": "./lib/*.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "esm",
    "lib",
    "src",
    "piral-forms.min.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smapiot/piral.git"
  },
  "bugs": {
    "url": "https://github.com/smapiot/piral/issues"
  },
  "scripts": {
    "cleanup": "rimraf esm lib piral-forms.min.js",
    "build": "yarn build:bundle && yarn build:commonjs && yarn build:esnext",
    "build:bundle": "esbuild src/index.ts --outfile=piral-forms.min.js --bundle --external:piral-core --external:react --external:react-router-dom --minify --global-name=piralForms",
    "build:commonjs": "tsc --project tsconfig.json --outDir lib --module commonjs",
    "build:esnext": "tsc --project tsconfig.json --outDir esm --module esnext",
    "typedoc": "typedoc --json ../../../docs/types/piral-forms.json src --exclude \"src/**/*.test.*\"",
    "test": "echo \"Error: run tests from root\" && exit 1"
  },
  "devDependencies": {
    "@types/history": "^4.7.8",
    "@types/react": "^18.0.0",
    "@types/react-router-dom": "^5.1.6",
    "piral-core": "^1.4.0",
    "react": "^18.0.0",
    "react-router-dom": "^5.2.0"
  }
}
